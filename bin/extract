#!/bin/bash

fail() {
    echo "ERROR: $1"
    exit 1
}

usage() {
    cat <<EOF
This script extracts zipped files.

Usage:
  extract FILE_TO_EXTRACT
EOF

exit 0
}

if [ -z $1 ]; then
    usage
fi

if [ -f $1 ]; then
    case $1 in
        *.tar.bz2)  tar xvjf $1     ;;
        *.tar.gz)   tar xvzf $1     ;;
        *.bz2)      bunzip $1       ;;
        *.rar)      unrar x         ;;
        *.gz)       gunzip $1       ;;
        *.tar)      tar xvf $1      ;;
        *.tbz2)     tar xvjf $1     ;;
        *.tgz)      tar xvzf $1     ;;
        *.Z)        uncompress $1   ;;
        *.7z)       7z x $1         ;;
        *)          fail "Don't know how to extract $1"
    esac
else
    fail "$1 is not a valid file!"
fi
